<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.web.albion.Mapper.BattleMapper">

    <insert id="insertBattle" parameterType="com.web.albion.dto.BattlesDto">
        INSERT INTO battlelog_info(battle_id,
                                   match_type,
                                   battle_time)
        VALUES (#{battle_id},
                #{match_type},
                #{battle_time})
    </insert>

    <select id="checkBattleExists" parameterType="int" resultType="int">
        SELECT COUNT(*) FROM battlelog_info WHERE battle_id = #{battle_id}
    </select>


</mapper>
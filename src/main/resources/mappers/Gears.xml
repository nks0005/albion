<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.web.albion.Mapper.GearsMapper">

    <insert id="insertGear" parameterType="com.web.albion.dto.GearsDto">
        INSERT INTO gear_info(name)
        VALUES (#{name})
    </insert>

    <select id="selectGearByName" parameterType="String" resultType="java.lang.Integer">
        SELECT id FROM gear_info WHERE name = #{name}
    </select>


</mapper>